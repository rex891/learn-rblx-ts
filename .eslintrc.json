{
    "root": true,
    "env": {
        "browser": true,
        "es2022": true,
        "node": true
    },
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "project": "./tsconfig.json",
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "@typescript-eslint",
        "roblox-ts",
        "prettier"
    ],
    "extends": [
        "eslint:recommended",
        "plugin:@typescript-eslint/recommended",
        "plugin:roblox-ts/recommended",
        "plugin:prettier/recommended"
    ],
    "ignorePatterns": ["out/**", "node_modules/**"],
    "rules": {
        "prettier/prettier": "warn"
    }
}